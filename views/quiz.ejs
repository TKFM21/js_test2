<%- include('./partials/header', {title: 'ToDo App'}) %>

<div id="main">
    <h1>ToDo List</h1>
    <div id="add-todo">
        <input type="text" name="title" id="add-title" placeholder="title">
        <input type="text" name="body" id="add-body" placeholder="body">
        <button id="add-btn">Add</button>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Body</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody">
        </tbody>
    </table>
    <hr>
    <a href="/">TOP</a>
</div>

<script src="js/main.js"></script>

<%- include('./partials/footer') %>